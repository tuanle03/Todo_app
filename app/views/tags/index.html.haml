%p#notice= notice
%h1 Tags
%table.table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @tags.each do |tag|
      %tr
        %td= tag.name
        %td= link_to 'Edit', edit_tag_path(tag), class: 'btn btn-outline-secondary btn-sm'
        %td= link_to 'Destroy', tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary btn-sm'
%br/
= link_to 'New Tag', new_tag_path, class: 'btn btn-outline-dark' 